<div class="m-playground">

  <h1 class="title">
    {{#if selected }}
      Viewing {{elementType}}: {{ selected }}
    {{else if readme }}
      Viewing {{elementType}}: index.
    {{else}}
      Please select an element from the list
    {{/if}}
  </h1>

  <div class="content">
    {{#if readme }}
      {{#> section }}
        {{#*inline "slot-content"}}
          {{> playground_markdown }}
        {{/inline}}
      {{/section }}
    {{/if}}

    {{#if examples.length }}
      {{#> section title=(ter variants "Variants" "") }}
        {{#*inline "slot-content"}}
          {{> extra_handlers_first this }}
          {{> playground_variants }}
          {{> playground_editor }}
        {{/inline}}
      {{/section }}

      {{#> section title="Rendered" variation="c-section--breathe c-section--white-smoke" }}
        {{#*inline "slot-content"}}
          {{> playground_renderer }}
        {{/inline}}
      {{/section }}
    {{/if}}
    {{> extra_handlers_last this }}
  </div>
</div>
